        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let token = null;",
                  "try {",
                  "  const body = pm.response.json();",
                  "  token = body.token || body.accessToken || body.jwt || (body.value && body.value.token);",
                  "} catch(e) {}",
                  "if (token) {",
                  "  pm.collectionVariables.set('token', token);",
                  "  pm.test('JWT token alýndý', function(){ pm.expect(!!token).to.be.true; });",
                  "} else {",
                  "  pm.test('Login cevabýnda token bulunamadý', function(){ pm.expect.fail('Token alaný bulunamadý'); });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/Auth/login",
              "host": [ "{{baseUrl}}" ],
              "path": [ "api", "Auth", "login" ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dev.user+1@obeysoft.local\",\n  \"password\": \"Dev1234!\"\n}"
            },
            "description": "Login olur; test script’i jwt’yi {{token}} deðiþkenine yazar."
          },
          "response": []
        },
