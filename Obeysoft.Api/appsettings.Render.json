{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=5432;Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
  },

  "Database": {
    "Automigrate": true,
    "Seed": true
  },

  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "Obeysoft",
    "Audience": "ObeysoftClient",
    "AccessTokenMinutes": 60
  },

  "Cors": {
    "AllowedOrigins": [
      "https://obeysoft.vercel.app",
      "https://sahincanyildiz.vercel.app",
      "http://localhost:5173"
    ]
  },

  "Swagger": {
    "Enabled": false
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }

  }

}